{% form_theme form 'bootstrap_3_layout.html.twig' %}
{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-lg-5">
            {{ form_row(form.firstName) }}
        </div>
        <div class="col-lg-5">
            {{ form_row(form.lastName) }}
        </div>
        <div class="col-lg-2">
            {{ form_row(form.sexe) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.phoneNumber) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.cin) }}
        </div>
        <div class="col-lg-6">
            {{ form_row(form.matricule) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.address) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(form.zipCode) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(form.city) }}
        </div>
        <div class="col-lg-4">
            {{ form_row(form.country) }}
        </div>
    </div>
    <div class="form-group text-right">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}
