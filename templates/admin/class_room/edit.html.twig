{% extends 'base.html.twig' %}

{% block title %}
    Scheduler: mise à jour d'une classe
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h1>Mise à jour</h1>
            <hr/>
            {% include 'common/flash_message.html.twig' %}
            <div class="text-right margin-bottom-30">
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('class_room_index') }}">
                            Retour à la liste
                        </a>
                    </li>
                    <li>
                        {{ include('admin/class_room/_delete_form.html.twig') }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            {{ include('admin/class_room/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>
